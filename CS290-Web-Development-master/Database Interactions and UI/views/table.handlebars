<h2>Add an exercise!</h2>

<form id="addExercise">
    Exercise:
    <input type="text" name="exercise" id="exercise"><br>
    Reps:
    <input type="number" name="reps" id="reps "min="1"><br>
    Weight:
    <input type="number" name="weight" id="weight "min="1"><br>
    Date:
    <input type="date" name="date" id="date"><br>
    LBS:
    <input type="checkbox" name="unitCheck" id="unitCheck"><br>
    <input type="submit" name="Add Exercise" value = "Add Exercise" id="addExerciseButton">
</form><br>

<table id="exerciseTable">
    <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Date</th>
        <th>Unit</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    
    {{#if results}}
        {{#each results}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.reps}}</td>
                <td>{{this.weight}}</td>
                <td>{{this.date}}</td>
                <td>{{this.lbs}}</td>
                <td><a href="/updateTable?id={{this.id}}"><input type="button" value="Update"></a></td>
                <td>
                    <input type="button" name="delete" value="Delete" onClick="deleteData('dataTable',{{this.id}})">
                    <input type="hidden" id="delete{{this.id}}">
                </td>
            </tr>
        {{/each}}
    {{/if}}
</table>

<script src="./script.js"></script>